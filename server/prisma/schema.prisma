generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id                String             @id @default(cuid())
  name              String
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  isActive          Boolean            @default(true)
  slug              String             @unique
  inbound           InboundItem[]
  gmailIntegrations GmailIntegration[]
  gmailAccess       GmailIntegrationAccess[]
  gmailRules        GmailRule[]
  auditLogs         AuditLog[]
  leadInbox         LeadInbox[]
  leads             Lead[]
  stages            LeadStage[]
  smartTriggerFlows SmartTriggerFlow[]
  sequences         Sequence[]
  sequenceSteps     SequenceStep[]
  sequenceEnrollments SequenceEnrollment[]
  sequenceJobs      SequenceJob[]
  sequenceLogs      SequenceExecutionLog[]
  tasks             Task[]
  settings          TenantSettings?
  users             TenantUser[]
  whatsappIntegration WhatsAppIntegration?
  whatsappMessages  WhatsAppMessage[]

  @@index([isActive])
}

model TenantSettings {
  tenantId                        String   @id
  inboundSecret                   String
  approvalDigestFrequencyMinutes  Int      @default(60)
  defaultLeadOwnerUserId          String?
  openaiEncryptedApiKey           String?  @db.Text
  timezone                        String   @default("UTC")
  createdAt                       DateTime @default(now())
  updatedAt                       DateTime @updatedAt
  tenant                          Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

model User {
  id               String            @id @default(cuid())
  name             String
  email            String            @unique
  passwordHash     String
  isActive         Boolean           @default(true)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  inboundDecisions InboundDecision[] @relation("InboundDecider")
  assignedLeads    Lead[]            @relation("LeadAssignee")
  createdSequences Sequence[]        @relation("SequenceCreator")
  sequenceEnrollments SequenceEnrollment[] @relation("SequenceEnroller")
  assignedTasks    Task[]            @relation("TaskAssignee")
  gmailIntegrations GmailIntegration[]     @relation("GmailIntegrationCreator")
  gmailAccess       GmailIntegrationAccess[]
  auditLogs        AuditLog[]
  refreshTokens    RefreshToken[]
  memberships      TenantUser[]
  createdWhatsappIntegrations WhatsAppIntegration[] @relation("WhatsAppIntegrationCreator")
  sentWhatsappMessages        WhatsAppMessage[] @relation("WhatsAppMessageSender")

  @@index([isActive])
}

model TenantUser {
  id        String   @id @default(cuid())
  tenantId  String
  userId    String
  role      UserRole
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tenantId, userId])
  @@index([tenantId, role])
  @@index([userId, role])
}

model RefreshToken {
  id        String    @id @default(cuid())
  userId    String
  tokenHash String
  revokedAt DateTime?
  expiresAt DateTime
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model LeadStage {
  id        String   @id @default(cuid())
  tenantId  String
  name      String
  position  Int
  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  leads     Lead[]
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, name])
  @@unique([tenantId, position])
  @@index([tenantId, isDeleted])
}

model Lead {
  id           String        @id @default(cuid())
  tenantId     String
  stageId      String
  name         String?
  phone        String?
  email        String?
  company      String?
  notes        String?       @db.Text
  source       InboundSource
  assignedTo   String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  assignedUser User?         @relation("LeadAssignee", fields: [assignedTo], references: [id])
  stage        LeadStage     @relation(fields: [stageId], references: [id])
  tenant       Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  whatsappMessages WhatsAppMessage[]
  sequenceEnrollments SequenceEnrollment[]
  sequenceJobs   SequenceJob[]
  tasks          Task[]

  @@index([tenantId, stageId])
  @@index([tenantId, phone])
  @@index([tenantId, email])
  @@index([tenantId, assignedTo])
  @@index([assignedTo], map: "Lead_assignedTo_fkey")
  @@index([stageId], map: "Lead_stageId_fkey")
}

model InboundItem {
  id           String           @id @default(cuid())
  tenantId     String
  source       InboundSource
  status       InboundStatus    @default(PENDING_CONFIRMATION)
  payload      Json
  name         String?
  phone        String?
  email        String?
  company      String?
  confirmToken String           @unique
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  decision     InboundDecision?
  tenant       Tenant           @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId, status])
  @@index([tenantId, source])
  @@index([createdAt])
}

model InboundDecision {
  id          String                @id @default(cuid())
  inboundId   String                @unique
  action      InboundDecisionAction
  decidedBy   String?
  decidedAt   DateTime              @default(now())
  note        String?
  decidedUser User?                 @relation("InboundDecider", fields: [decidedBy], references: [id])
  inbound     InboundItem           @relation(fields: [inboundId], references: [id], onDelete: Cascade)

  @@index([decidedBy])
  @@index([decidedAt])
}

model SmartTriggerFlow {
  id          String             @id @default(cuid())
  tenantId    String
  name        String
  description String?
  status      SmartTriggerStatus @default(DRAFT)
  steps       Json
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  tenant      Tenant             @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId, status])
  @@index([tenantId, updatedAt])
}

model GmailIntegration {
  id                    String                @id @default(cuid())
  tenantId              String
  createdByUserId       String
  gmailAddress          String
  encryptedRefreshToken String                @db.Text
  scopes                String                @db.Text
  status                GmailIntegrationStatus @default(ACTIVE)
  createdAt             DateTime              @default(now())
  updatedAt             DateTime              @updatedAt
  tenant                Tenant                @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdByUser         User                  @relation("GmailIntegrationCreator", fields: [createdByUserId], references: [id])
  rules                 GmailRule[]
  syncState             GmailSyncState?
  leadInbox             LeadInbox[]

  @@unique([tenantId, gmailAddress])
  @@index([tenantId, status])
}

model GmailIntegrationAccess {
  id        String   @id @default(cuid())
  tenantId  String
  userId    String
  createdAt DateTime @default(now())
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tenantId, userId])
  @@index([tenantId, userId])
}

model GmailSyncState {
  integrationId       String   @id
  lastHistoryId       String?
  lastSyncAt          DateTime?
  lastCheckedCount    Int      @default(0)
  lastMatchedCount    Int      @default(0)
  lastMatchedRulesJson Json?
  errorCount          Int      @default(0)
  lastError           String?  @db.Text
  backoffUntil        DateTime?
  integration         GmailIntegration @relation(fields: [integrationId], references: [id], onDelete: Cascade)

  @@index([lastSyncAt])
}

model GmailRule {
  id            String   @id @default(cuid())
  tenantId      String
  integrationId String
  name          String
  isActive      Boolean  @default(true)
  conditionsJson Json
  createdBy     String
  version       Int      @default(1)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  tenant        Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  integration   GmailIntegration @relation(fields: [integrationId], references: [id], onDelete: Cascade)

  @@index([tenantId, integrationId])
  @@index([tenantId, isActive])
}

model LeadInbox {
  id                   String         @id @default(cuid())
  tenantId             String
  integrationId        String
  gmailMessageId       String
  threadId             String?
  from                 String
  subject              String?
  snippet              String?        @db.Text
  receivedAt           DateTime
  rawHeadersJson       Json
  rawBodyText          String?        @db.Text
  status               LeadInboxStatus @default(PENDING)
  detectedAssigneeHint String?
  extractedPreviewJson Json?
  leadId               String?
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt
  tenant               Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  integration          GmailIntegration @relation(fields: [integrationId], references: [id], onDelete: Cascade)
  approvalTokens       LeadApprovalToken[]

  @@unique([integrationId, gmailMessageId])
  @@index([tenantId, status])
  @@index([tenantId, receivedAt])
}

model LeadApprovalToken {
  id          String            @id @default(cuid())
  leadInboxId String
  tenantId    String
  tokenHash   String
  action      LeadApprovalAction
  expiresAt   DateTime
  usedAt      DateTime?
  createdAt   DateTime          @default(now())
  leadInbox   LeadInbox         @relation(fields: [leadInboxId], references: [id], onDelete: Cascade)

  @@index([tenantId, leadInboxId])
  @@index([expiresAt])
}

model AuditLog {
  id          String   @id @default(cuid())
  tenantId    String
  actorUserId String?
  actionType  String
  entityType  String
  entityId    String?
  metaJson    Json?
  createdAt   DateTime @default(now())
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  actorUser   User?    @relation(fields: [actorUserId], references: [id], onDelete: SetNull)

  @@index([tenantId])
  @@index([actorUserId])
  @@index([tenantId, createdAt])
}

model WhatsAppIntegration {
  id                   String                    @id @default(cuid())
  tenantId             String                    @unique
  businessAccountId    String?
  phoneNumberId        String
  displayPhoneNumber   String?
  encryptedAccessToken String                    @db.Text
  appId                String?
  webhookVerifyToken   String?
  status               WhatsAppIntegrationStatus @default(ACTIVE)
  lastValidatedAt      DateTime?
  lastValidationError  String?                   @db.Text
  createdByUserId      String
  createdAt            DateTime                  @default(now())
  updatedAt            DateTime                  @updatedAt
  tenant               Tenant                    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdByUser        User                      @relation("WhatsAppIntegrationCreator", fields: [createdByUserId], references: [id])
  messages             WhatsAppMessage[]

  @@index([status])
}

model WhatsAppMessage {
  id                String                  @id @default(cuid())
  tenantId          String
  integrationId     String
  leadId            String?
  direction         WhatsAppMessageDirection
  status            WhatsAppMessageStatus   @default(QUEUED)
  recipientPhone    String
  messageBody       String                  @db.Text
  providerMessageId String?
  providerStatus    String?
  providerError     String?                 @db.Text
  metadataJson      Json?
  sentByUserId      String?
  sentAt            DateTime?
  createdAt         DateTime                @default(now())
  updatedAt         DateTime                @updatedAt
  tenant            Tenant                  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  integration       WhatsAppIntegration     @relation(fields: [integrationId], references: [id], onDelete: Cascade)
  lead              Lead?                   @relation(fields: [leadId], references: [id], onDelete: SetNull)
  sentByUser        User?                   @relation("WhatsAppMessageSender", fields: [sentByUserId], references: [id], onDelete: SetNull)

  @@index([tenantId, createdAt])
  @@index([integrationId, createdAt])
  @@index([leadId])
}

model Sequence {
  id           String              @id @default(cuid())
  tenantId     String
  name         String
  description  String?
  isActive     Boolean             @default(true)
  triggerType  SequenceTriggerType
  triggerConfig Json
  createdById  String
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  tenant       Tenant              @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdBy    User                @relation("SequenceCreator", fields: [createdById], references: [id], onDelete: Restrict)
  steps        SequenceStep[]
  enrollments  SequenceEnrollment[]
  jobs         SequenceJob[]
  logs         SequenceExecutionLog[]

  @@index([tenantId, isActive])
  @@index([tenantId, triggerType])
}

model SequenceStep {
  id           String             @id @default(cuid())
  tenantId     String
  sequenceId   String
  stepOrder    Int
  delayValue   Int
  delayUnit    SequenceDelayUnit
  actionType   SequenceActionType
  actionConfig Json
  isEnabled    Boolean            @default(true)
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
  tenant       Tenant             @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  sequence     Sequence           @relation(fields: [sequenceId], references: [id], onDelete: Cascade)
  jobs         SequenceJob[]
  logs         SequenceExecutionLog[]

  @@unique([tenantId, sequenceId, stepOrder])
  @@index([tenantId])
  @@index([sequenceId, isEnabled])
}

model SequenceEnrollment {
  id               String                   @id @default(cuid())
  tenantId         String
  sequenceId       String
  leadId           String
  enrolledById     String?
  status           SequenceEnrollmentStatus @default(ACTIVE)
  startedAt        DateTime                 @default(now())
  completedAt      DateTime?
  pausedAt         DateTime?
  cancelledAt      DateTime?
  currentStepOrder Int                      @default(0)
  dedupeKey        String?
  createdAt        DateTime                 @default(now())
  updatedAt        DateTime                 @updatedAt
  tenant           Tenant                   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  sequence         Sequence                 @relation(fields: [sequenceId], references: [id], onDelete: Cascade)
  lead             Lead                     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  enrolledBy       User?                    @relation("SequenceEnroller", fields: [enrolledById], references: [id], onDelete: SetNull)
  jobs             SequenceJob[]
  logs             SequenceExecutionLog[]

  @@index([tenantId, sequenceId, status])
  @@index([tenantId, leadId])
  @@index([tenantId, dedupeKey])
}

model SequenceJob {
  id              String            @id @default(cuid())
  tenantId        String
  enrollmentId    String
  sequenceId      String
  leadId          String
  stepId          String
  stepOrder       Int
  actionType      SequenceActionType
  actionConfig    Json
  scheduledFor    DateTime
  status          SequenceJobStatus @default(SCHEDULED)
  attemptCount    Int               @default(0)
  maxAttempts     Int               @default(3)
  lastError       String?           @db.Text
  lockedAt        DateTime?
  lockToken       String?
  providerMessageId String?
  idempotencyKey  String            @unique
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  tenant          Tenant            @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  enrollment      SequenceEnrollment @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)
  sequence        Sequence          @relation(fields: [sequenceId], references: [id], onDelete: Cascade)
  lead            Lead              @relation(fields: [leadId], references: [id], onDelete: Cascade)
  step            SequenceStep      @relation(fields: [stepId], references: [id], onDelete: Restrict)
  logs            SequenceExecutionLog[]

  @@index([tenantId, status, scheduledFor])
  @@index([tenantId, enrollmentId])
  @@index([tenantId, sequenceId])
}

model SequenceExecutionLog {
  id             String                 @id @default(cuid())
  tenantId       String
  jobId          String
  sequenceId     String
  enrollmentId   String
  stepId         String
  actionType     SequenceActionType
  status         SequenceExecutionStatus
  requestPayload Json
  responsePayload Json
  errorMessage   String?
  createdAt      DateTime               @default(now())
  tenant         Tenant                 @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  job            SequenceJob            @relation(fields: [jobId], references: [id], onDelete: Cascade)
  sequence       Sequence               @relation(fields: [sequenceId], references: [id], onDelete: Cascade)
  enrollment     SequenceEnrollment     @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)
  step           SequenceStep           @relation(fields: [stepId], references: [id], onDelete: Restrict)

  @@index([tenantId, createdAt])
  @@index([tenantId, jobId])
  @@index([tenantId, sequenceId])
}

model Task {
  id          String     @id @default(cuid())
  tenantId    String
  leadId      String
  assigneeId  String
  type        TaskType
  title       String
  description String?    @db.Text
  dueAt       DateTime
  status      TaskStatus @default(OPEN)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  tenant      Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  lead        Lead       @relation(fields: [leadId], references: [id], onDelete: Cascade)
  assignee    User       @relation("TaskAssignee", fields: [assigneeId], references: [id], onDelete: Restrict)

  @@index([tenantId, status, dueAt])
  @@index([tenantId, assigneeId])
}

enum UserRole {
  SUPERADMIN
  TENANT_ADMIN
  SALES_ADMIN
  SALES_EXECUTIVE
}

enum InboundSource {
  EMAIL
  INDIAMART
  EXCEL
  WHATSAPP
  MANUAL
}

enum InboundStatus {
  PENDING_CONFIRMATION
  IMPORTED
  JUNK
}

enum InboundDecisionAction {
  IMPORTED
  JUNK
}

enum SmartTriggerStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum GmailIntegrationStatus {
  ACTIVE
  REVOKED
  ERROR
}

enum WhatsAppIntegrationStatus {
  ACTIVE
  ERROR
  DISCONNECTED
}

enum WhatsAppMessageDirection {
  OUTBOUND
  INBOUND
}

enum WhatsAppMessageStatus {
  QUEUED
  SENT
  FAILED
}

enum SequenceTriggerType {
  MANUAL
  ON_LEAD_CREATED
  ON_STAGE_CHANGED
}

enum SequenceDelayUnit {
  MINUTES
  HOURS
  DAYS
}

enum SequenceActionType {
  EMAIL
  WHATSAPP
  CALL_REMINDER
}

enum SequenceEnrollmentStatus {
  ACTIVE
  PAUSED
  COMPLETED
  CANCELLED
}

enum SequenceJobStatus {
  SCHEDULED
  RUNNING
  SUCCESS
  FAILED
  CANCELLED
  SKIPPED
}

enum SequenceExecutionStatus {
  SUCCESS
  FAILED
}

enum TaskType {
  CALL
}

enum TaskStatus {
  OPEN
  DONE
  CANCELLED
}

enum LeadInboxStatus {
  PENDING
  APPROVED
  REJECTED
  IMPORTED
  ERROR
}

enum LeadApprovalAction {
  APPROVE
  REJECT
}
